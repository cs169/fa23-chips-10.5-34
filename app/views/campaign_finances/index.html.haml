.row.mt-2
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        = form_tag(search_results_campaign_finances_path, method: 'post', class: 'form-inline mt-3') do
        .form-group.mb-2
            %label.form-label{'for' => 'category'} Category:
            = select_tag 'category', options_for_select([
            ['Candidate Loan', 'candidate-loan'],
            ['Contribution Total', 'contribution-total'],
            ['Debts Owed', 'debts-owed'],
            ['Disbursements Total', 'disbursements-total'],
            ['End Cash', 'end-cash'],
            ['Individual Total', 'individual-total'],
            ['PAC Total', 'pac-total'],
            ['Receipts Total', 'receipts-total'],
            ['Refund Total', 'refund-total']
            ], nil, { prompt: 'Select a Category' }), class: 'form-control'

        .form-group.mx-sm-3.mb-2
            %label.form-label{'for' => 'year'} Year:
            = select_tag 'year', options_for_select((2010..2020).to_a.reverse), class: 'form-control'

        = submit_tag 'Search', class: 'btn btn-primary mb-2'
